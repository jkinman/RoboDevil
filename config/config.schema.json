{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RoboDevil Assistant Config",
  "type": "object",
  "properties": {
    "ipc": {
      "type": "object",
      "properties": {
        "httpHost": { "type": "string" },
        "httpPort": { "type": "integer" },
        "socketPath": { "type": "string" }
      },
      "required": ["httpHost", "httpPort", "socketPath"]
    },
    "health": {
      "type": "object",
      "properties": {
        "pingIntervalSec": { "type": "number" }
      }
    },
    "stt": {
      "type": "object",
      "properties": {
        "recordSeconds": { "type": "number" },
        "audioPath": { "type": "string" },
        "whisperBin": { "type": "string" },
        "whisperModel": { "type": "string" },
        "recordCmd": { "type": "string" },
        "wakePhrase": { "type": "string" },
        "wakeCooldownMs": { "type": "number" },
        "requireWake": { "type": "boolean" },
        "interceptPhrases": { "type": "string" },
        "interceptCooldownMs": { "type": "number" },
        "interceptCommand": { "type": "string" }
      }
    },
    "openclaw": {
      "type": "object",
      "properties": {
        "gatewayHost": { "type": "string" },
        "gatewayPort": { "type": "integer" },
        "agentId": { "type": "string" },
        "sessionUser": { "type": "string" },
        "gatewayScheme": { "type": "string" },
        "httpEndpoint": { "type": "string" }
      }
    },
    "llm": {
      "type": "object",
      "properties": {
        "provider": { "type": "string", "enum": ["openclaw", "xai"] },
        "model": { "type": "string" },
        "xai": {
          "type": "object",
          "properties": {
            "baseUrl": { "type": "string" },
            "endpoint": { "type": "string", "enum": ["responses", "chat"] }
          }
        }
      }
    },
    "storage": {
      "type": "object",
      "properties": {
        "httpHost": { "type": "string" },
        "httpPort": { "type": "integer" },
        "dbPath": { "type": "string" },
        "retentionDays": { "type": "number" }
      }
    },
    "tts": {
      "type": "object",
      "properties": {
        "stopWindowMs": { "type": "number" },
        "playCmd": { "type": "string" },
        "tempAudio": { "type": "string" },
        "inworld": {
          "type": "object",
          "properties": {
            "baseUrl": { "type": "string" },
            "voiceId": { "type": "string" },
            "modelId": { "type": "string" },
            "workspaceId": { "type": "string" },
            "audioEncoding": { "type": "string" },
            "speakingRate": { "type": "number" },
            "temperature": { "type": "number" }
          }
        },
        "piper": {
          "type": "object",
          "properties": {
            "bin": { "type": "string" },
            "model": { "type": "string" },
            "outputPath": { "type": "string" }
          }
        }
      }
    }
  },
  "required": ["ipc", "stt", "openclaw", "llm", "storage", "tts"]
}
